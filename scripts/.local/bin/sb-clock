#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send -u low "This Month" "$(cal --color=always \
        | sed "s/..7m/<b><span color=\"#b63740\">/;s/..27m/<\/span><\/b>/")" \
        && notify-send "Appointments" "$(calcurse -d7)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
    3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next seven days.\n- Middle click to open calcurse if installed\n\- Right click to show this message" ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+$icon%d/%m/%Y %I:%M%p "
