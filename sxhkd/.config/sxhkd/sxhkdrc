# Basic binds
super + Return
    $TERMINAL
super + d
    dmenu_run
super + w
    $BROWSER
super + shift + w
	$TRUEBROWSER
super + control + w
	torbrowser-launcher
super + f
    $TERMINAL -e vifmrun
super + m
    $TERMINAL -e neomutt
super + n
    $TERMINAL -e newsboat
super + a
	$TERMINAL -e abook
super + c
	$TERMINAL -e calcurse
super + shift + u
    manpdf
super + shift + p
	passmenu2 || passmenu
super + shift + b
    cycle-backgrounds
super + control + shift + b
	bgset $(xdg-user-dir PICTURES)/backgrounds/

# picom
super + shift + i
    dmenu_change_compositor_settings

# switch between keyboard layouts
super + control + shift + d
	setxkbmap -layout dvorak &
super + control + shift + q
	setxkbmap -layout us &

# screenshot
Print
	scrot -e 'mv $f '"$(xdg-user-dir PICTURES)/screenshots/$(date +'scrot_%y%m%d@%I%M%S_$wx$h.png')"
control + shift + Print
	scrot -s -e 'mv $f '"$(xdg-user-dir PICTURES)/screenshots/$(date +'scrot_%y%m%d@%I%M%S_$wx$h.png')"
alt + shift + Print
	scrot -u -e 'mv $f '"$(xdg-user-dir PICTURES)/screenshots/$(date +'scrot_%y%m%d@%I%M%S_$wx$h.png')"

# volume
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +2%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -2%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

super + shift + t
	pkill -RTMIN+13 "${STATUSBAR:-dwmblocks}"

# brightness
XF86MonBrightnessUp
    brightnessctl s +10% &
XF86MonBrightnessDown
    brightnessctl s 10%- &
