{
    "diagnostic.errorSign": ">>",
    "diagnostic.warningSign": ">>",
    "diagnostic.infoSign": ">>",

    "suggest.noselect": true,
    "suggest.enablePreselect": false,

    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "typescript",
        "javascript",
        "typescriptreact",
        "javascriptreact"
    ],

    "suggest.completionItemKindLabels": {
        "module": "",

        "struct": "",
        "class": "",
        "interface": "",
        "enum": "ﴯ",
        "enumMember": "ﴯ",
        "field": "ﰠ",

        "value": "",
        "variable": "",
        "constant": "",
        "reference": "&",

        "function": "\u0192",
        "method": "\u0192",
        "constructor": "\uf0ad",

        "snippet": "",

        "keyword": "",
        "operator": "",

        "text": "",
        "file": "",
        "folder": "",

        "property": "\uf02b",

        "color": "",
        "event": "",
        "typeParameter": "\uf728",
        "default": "?"
    },

    "languageserver": {
        "ccls": {
            "command": "clangd",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        },

        "gopls": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        }
    },

    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        }
    }
}
