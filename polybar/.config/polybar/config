[format]
;background = ${xrdb:color0:#222}
background = #cc2d2d2d
background-alt = #cc2d2d2d
;foreground = ${xrdb:color7:#222}
foreground = #aaffffff
foreground-alt = #cc616161
primary = #ccb4eded
secondary = #cc60eca6
alert = #cce9616b

padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = DejaVu Sans Book:fontformat=truetype:size=14;2
font-1 = Noto Color Emoji:pixelsize=14:scale=8;2
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0

[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
fixed-center = false

background = ${format.background}
foreground = ${format.foreground}

padding-left = ${format.padding-left}
padding-right = ${format.padding-right}
module-margin-left = {$format.module-margin-left}
module-margin-right = {$format.module-margin-right}

font-0 = ${format.font-0}
font-1 = ${format.font-1}
font-2 = ${format.font-2}

modules-left = i3
modules-center = mpd
modules-right = xbacklight pulseaudio wlan eth battery powermenu date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
wm-restack = i3

; DOES NOT MOVE WINDOWS
;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${format.foreground-alt}
format-prefix-underline = ${format.secondary}

label-layout = %layout%
label-layout-underline = ${format.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${format.secondary}
label-indicator-underline = ${format.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${format.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${format.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${format.background-alt}
label-focused-underline= ${format.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${format.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |


